					img.butterfly1(src=imgUrl+"butterfly2.png", alt="")
					img.butterfly2(src=imgUrl+"butterfly3.png", alt="")
					.container
						.caption
							h1.caption__title Корзина
							a.backlink(href="index.html") Вернуться на главную
						ul.list
							li.line
								.block
									img.basket__img(src=imgUrl+"basket-img.jpg", alt="")
								.block
									h2.block__title Наименование
									h2.block__name Зеленая трава
								.block
									h2.block__title Цена
									h2.block__price 4200
								.block
									h2.block__title Количество
									.counter
										button.counter__btn.minus -
										input.counter__field(type="text" value="1")
										button.counter__btn.plus +
								.block
									h2.block__title Сумма
									h2.block__price 8400
							li.line
								.block
									img.basket__img(src=imgUrl+"basket-img.jpg", alt="")
								.block
