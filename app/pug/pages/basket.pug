- var imgUrl = '../img/';
      
doctype
html
	include ../blocks/head.pug
		title AFR
	body
		include ../blocks/header.pug
 
		.page-container
			form.basket-wrap(action="#")
				img.tree1(src=imgUrl+"tree1.png", alt="")
				img.tree2(src=imgUrl+"tree2.png", alt="")
				section.basket
					img.cloud1(src=imgUrl+"cloud1.png", alt="")
